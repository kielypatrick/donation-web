{{> mainmenu _id="settings" }}

<section class="ui raised segment">
  <div class="ui grid">
    <div class="ui ten wide column">
      <div class="ui stacked fluid form segment">
        <form action="/settingsupdate" method="POST">
          <h3 class="ui header">Settings</h3>
          <div class="two fields">
            <div class="field">
              <label>First Name</label>
              <input placeholder="{{donor.firstName}}" type="text" name="firstName">
            </div>
            <div class="field">
              <label>Last Name</label>
              <input placeholder="{{donor.lastName}}" type="text" name="lastName">
            </div>
          </div>
          <div class="field">
            <label>Email</label>
            <input placeholder="{{donor.email}}" type="text" name="email">
          </div>
          <div class="field">
            <label>Password</label>
            <input placeholder="{{donor.password}}"type="password" name="password">
          </div>
          <button class="ui blue submit button">Submit</button>
        </form>
      </div>
    </div>
    <aside class="ui five wide column">
      <img src="images/homer3.png" class="ui medium image">
    </aside>
  </div>
</section>